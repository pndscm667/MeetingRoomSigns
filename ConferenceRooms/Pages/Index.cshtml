@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8" style="height:97vh; background-color:white; margin-top:12px;">
            <br />
            <div style="border:solid;border-color:black;border-width:1px;background-color: #55adaa !important;border-radius:10px;padding:20px;" >
                
                <p class="Titillium text-left" style="font-size:70px; font-weight:400; color:black;">
                   Contoso
                </p>
                <p class="Titillium text-left" style="font-size:50px; font-weight:400; color:black;">
                    @Model.DisplayName
                </p>
                <p class="Titillium text-left" style="font-size:30px; font-weight:200; color:dimgrey;">
                    @Model.nowday 
                </p>

            </div>

            <table class="table border-top-0">
                <tbody>
                    <tr>
                        <td class="Titillium text-left" style="font-size:18px; font-weight:bold">Host</td>
                        <td class="Titillium text-left" style="font-size:18px; font-weight:bold">Meeting</td>
                        <td class="Titillium text-left" style="font-size:18px; font-weight:bold">Time</td>
                    </tr>

                    @foreach (var meeting in Model.allMeetings)
                    {
                    <tr>

                        <td class="Titillium text-left" style="font-size:18px; font-weight:400">@meeting.organizer</td>
                        <td class="Titillium text-left" style="font-size:18px; font-weight:400">@meeting.subject</td>
                        <td class="Titillium text-left" style="font-size:18px; font-weight:300">

                            @meeting.start.ToString("hh:mm tt")&nbsp; -&nbsp;
                            @meeting.end.ToString("hh:mm tt")
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
            <div style="border:solid;border-color:black;border-width:1px;border-radius:10px;padding:10px;position:absolute;bottom:25px;width:100%;background-color: #d4d6d9 !important">
               
                <p class="Titillium text-left" style="font-size:20px; font-weight:500; color:black;">
                    @Model.TodaysQuote
                </p>
                <p class="Titillium text-left" style="font-size:20px; font-weight:300; color:dimgrey;">
                    -@Model.TodaysAuthor
                </p>

            </div>
            <div style="position:absolute;bottom:0px">
            <p class="Titillium text-left" style="font-size:12pt; font-weight:normal; color:lightgray;">

                &copy; @Model.nowyear - Contoso Corp
            </p>
            </div>
        </div>

        <div class="col-md-2"></div>
    </div>
</div>